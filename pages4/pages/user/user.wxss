.user-wrap .info {
  margin-left: 30rpx;
}
.user-wrap .info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx 20rpx 0;
  border-bottom: 1px solid #eee;
}
.user-wrap .padding-more {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.user-wrap .name {
  color: #333;
  font-size: 26rpx;
  font-weight: 500;
}
.user-wrap .right-info {
  color: #999;
}

.info-item .avatar-url {
  width: 80rpx;
  height: 80rpx;
  background-color: #ddd;
  border-radius: 50%;
}

.border-10 {
  height: 20rpx;
  background-color: #f5f5f5;
}