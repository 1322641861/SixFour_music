.user-wrap .info {
  margin-left: 30rpx;
}
.user-wrap .info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx 20rpx 0;
  border-bottom: 1px solid #eee;
}
.user-wrap .special-item {
  display: block;
}
.user-wrap .special-item .right-info {
  float: right;
}
.user-wrap .padding-more {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.user-wrap .name {
  color: #333;
  font-size: 26rpx;
  font-weight: 500;
}
.user-wrap .right-info {
  color: #999;
}

.sex-select {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, .4);
}
.sex-select .content {
  width: 80vw;
  text-align: center;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.sex-select .content-item {
  line-height: 80rpx;
  background: #fff;
  border-radius: 12rpx;
}
.sex-select .close text {
  background: #c3c3c3;
  color: #fff;
  border-radius: 50%;
  font-size: 40rpx;
  padding: 8rpx;
  display: inline-block;
  margin-top: 56rpx;
}
.sex-select .sex-item {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  font-size: 26rpx;
}
.sex-select .icon-xuanzhong {
  font-size: 24rpx;
  color: #d81e06;
}

.info-item .avatar-url {
  width: 80rpx;
  height: 80rpx;
  background-color: #ddd;
  border-radius: 50%;
}

.border-10 {
  height: 20rpx;
  background-color: #f5f5f5;
}