/* pages/profile/profile.wxss */
.profile {
  height: calc(100vh - 200rpx);
  background-color: #f5f5f5;
  padding-top: 100rpx;
}
.avatar-wrap {
  text-align: center;
  margin: 0 24rpx;
  background-color: #fff;
  border-radius: 20rpx;
  position: relative;
  height: 150rpx;
  box-shadow: 0rpx 0rpx 16rpx rgba(0, 0, 0, .1);
}
.avatar-wrap .icon-avatar {
  color: #fdf6fb;
  font-size: 110rpx;
  background: #e8c7b8;
}
.avatar-wrap .profile-avatar {
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: -65rpx;
  overflow: hidden;
}
.avatar-wrap .profile-avatar image {
  height: 100%;
  width: 100%;
}
.avatar-wrap .avatar-name {
  position: absolute;
  left: 0;
  right: 0;
  top: 60rpx;
  font-size: 38rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
}

.action-list {
  text-align: center;
  margin: 24rpx 24rpx 0;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  padding: 18rpx 0;
}
.action-list .action-item {
  display: flex;
  flex-direction: column;
  font-size: 22rpx;
  color: #777;
  width: 24%;
  margin: 26rpx 0;
}
.action-item text:first-child {
  margin-bottom: 6rpx;
  font-size: 50rpx;
  color: #d81e06;
}