/* pages/index/index.wxss */
@import "index.skeleton.wxss";

.home-wrap {
  background-color: #f5f5f5;
  height: 100%;
  overflow: hidden;
}

.swiper-wrap {
    background-color: #fff;
    padding: 10rpx 24rpx;
}
.home-swiper {
    width: 100%;
    border-radius: 20rpx;
    overflow: hidden;
}
.home-swiper image {
    width: 100%;
    height: 100%;
}

.home-tab {
  display: flex;
  justify-content: space-evenly;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
  background: #fff;
}
.home-tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.home-tab-item text {
  font-size: 24rpx;
}
.home-tab-item text:nth-child(1) {
  width: 100rpx;
  height: 100rpx;
  font-size: 50rpx;
  background-color: rgb(245, 236, 240);
  border-radius: 50%;
  color: #C20C0C;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 16rpx;
}
.home-tab-item text.ranking-btn {
  font-size: 37rpx;
}

.recommend {
  margin-bottom: 20rpx;
  border-radius: 0 0 20rpx 20rpx;
  padding-bottom: 20rpx;
  background: #fff;
}

.ranking {
  background-color: #fff;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
}
.top-list {
  padding: 10rpx 0;
  height: 480rpx;
}
.top-list-item {
  box-sizing: border-box;
}
.top-item-wrap {
  width: 96%;
  border: 1px solid #eee;
  box-shadow: 3rpx 0rpx 1rpx rgba(0, 0, 0, .1);
  border-radius: 20rpx;
  padding: 24rpx;
  box-sizing: border-box;
}
.top-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.top-title .title {
  font-size: 32rpx;
  font-weight: bold;
}
.top-title .top-tag {
  font-size: 24rpx;
  color: #ccc;
  width: 300rpx;
  white-space: nowrap;
  align-content: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 38rpx;
  line-height: 38rpx;
}
.top-desc {
  padding: 10rpx 0;
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  height: 100rpx;
}
.top-desc .top-index {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-weight: bold;
  font-size: 32rpx;
}
.top-desc .top-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
}
.top-desc .song-title {
  width: 300rpx;
  display: flex;
  flex-direction: column;
}
.top-desc .song-title text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.top-desc .song-title text:first-child {
  margin-bottom: 5rpx;
  font-size: 30rpx;
}
.top-desc .song-title text:last-child {
  color: #999;
}
.top-desc .top-desc-tag {
  color: #f06210;
  background-color: #f8c4a6;
  border-radius: 3rpx;
  padding: 4rpx;
}