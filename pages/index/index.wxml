<view class="home-wrap">
  <view class="swiper-wrap">
    <swiper class="home-swiper" indicator-dots="{{true}}" indicator-color="rgba(0, 0, 0, .2)" indicator-active-color="#fff" autoplay interval="5000">
      <swiper-item class="home-swiper-item" wx:for="{{banners}}" wx:key="encodeId">
        <image src="{{item.pic}}"></image>
      </swiper-item>
    </swiper>
  </view>

  <view class="home-tab">
    <view class="home-tab-item" data-index="0" bindtap="navigateToPage">
      <text class="iconfont icon-day-recommend"></text>
      <text>每日推荐</text>
    </view>
    <view class="home-tab-item" data-index="1" bindtap="navigateToPage">
      <text class="iconfont icon-gedan"></text>
      <text>歌单</text>
    </view>
    <view class="home-tab-item" data-index="2" bindtap="navigateToPage">
      <text class="iconfont icon-paihangbang ranking-btn"></text>
      <text>排行榜</text>
    </view>
    <view class="home-tab-item" data-index="3" bindtap="navigateToPage">
      <text class="iconfont icon-a-tupianyihuifu-10"></text>
      <text>私人FM</text>
    </view>
    <view class="home-tab-item" data-index="4" bindtap="navigateToPage">
      <text class="iconfont icon-zhibo"></text>
      <text>直播</text>
    </view>
  </view>

  <view class="recommend">
    <navHeader title="推荐歌单"></navHeader>
    <songListSlider list="{{personalized}}"></songListSlider>
  </view>

  <view class="ranking">
    <navHeader title="排行榜"></navHeader>
    <swiper class="top-list" previous-margin="24rpx" next-margin="50rpx">
      <swiper-item class="top-list-item" wx:for="{{topList}}" wx:key="name">
        <view class="top-item-wrap">
          <view class="top-title">
            <view class="title">
              <text>{{item.name}}</text>
              <text class="iconfont icon-more"></text>
            </view>
            <text class="top-tag">{{item.desc}}</text>
          </view>
          <view class="top-desc" wx:for="{{item.list}}" wx:key="id" wx:for-item="mItem">
            <image class="top-image" src="{{mItem.al.picUrl}}"></image>
            <text class="top-index">{{index + 1}}</text>
            <view class="song-title">
              <text>{{mItem.name}}</text>
              <text>{{mItem.ar.length>0 ? mItem.ar[0].name : ''}}</text>
            </view>
            <!-- <text class="top-desc-tag">宝藏</text> -->
          </view>
        </view>
      </swiper-item>
    </swiper>
  </view>
</view>